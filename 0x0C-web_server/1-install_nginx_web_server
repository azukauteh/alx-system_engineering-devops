#!/usr/bin/env bash
# Install nginx on web server; Nginx should be listening on port 80

ssh ubuntu@100.25.145.62 web-01 'sudo apt-get update'
ssh ubuntu@100.25.145.62 web-01 'sudo apt-get -y install nginx'
ssh ubuntu@100.25.145.62 web-01 'sudo ufw allow "Nginx HTTP"'
ssh ubuntu@100.25.145.62 web-01 'echo "Hello World!" | sudo tee /var/www/html/index.nginx-debian.html'
ssh ubuntu@100.25.145.62 web-01 'sudo service nginx restart'
